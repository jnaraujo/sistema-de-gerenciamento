<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.uefs.sistemadegerenciamento.controllers.LoginController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <Label text="Sistema de Gerenciamento" fx:id="welcomeText" />

    <TextField fx:id="txtLogin" promptText="Login" />
    <PasswordField fx:id="txtSenha" promptText="Senha"  />

    <Button text="Login" onAction="#onLoginClick" />
</VBox>
